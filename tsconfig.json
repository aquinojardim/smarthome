{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": ["jest", "node"],
  },
  "include": ["src/**/*"],
  "exclude": ["__tests__", "node_modules"]
}